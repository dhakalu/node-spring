{
    "compilerOptions": {
        /* Basic Options */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "reflect-metadata",
            "@types/jest",
            "@types/node",
        ],
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ]
}